@model Department

@{
    ViewData["Title"] = "Edit Department";
}

<style>
    .form-background {
        background-color: #9EB0EE;
        padding: 30px;
        border-radius: 15px;
        max-width: 500px;
        margin: 0 auto;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); 
    }

    .form-title {
        color: #333;
    }

    .form-group label {
        font-weight: bold;
        color: #333; 
    }

    .btn-primary {
        background-color: #435386;
        border: none;
    }

    .btn-secondary {
        background-color: #6477B2;
        border: none;
    }

    .btn-block {
        width: 100%;
    }

    .text-danger {
        color: #f44336; 
    }
</style>

<div class="container mt-5">
    <h1 class="text-center form-title">@ViewData["Title"]</h1>

    <h4 class="mt-4">Department</h4>
    <hr />
    <div class="row justify-content-center">
        <div class="form-background">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="DeptNo" />
                <div class="form-group mb-3">
                    <label asp-for="DeptName" class="control-label"></label>
                    <input asp-for="DeptName" class="form-control" />
                    <span asp-validation-for="DeptName" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="DeptHead" class="control-label"></label>
                    <input asp-for="DeptHead" class="form-control" />
                    <span asp-validation-for="DeptHead" class="text-danger"></span>
                </div>
                <div class="form-group mt-4">
                    <input type="submit" value="Save" class="btn btn-primary btn-block" />
                </div>
            </form>
            <div class="mt-3">
                <a asp-action="Index" class="btn btn-secondary btn-block">Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
