@model Position

@{
    ViewData["Title"] = "Create Position";
}

<style>
    .form-background {
        background: #B0C4DE;
        padding: 30px;
        border-radius: 15px;
        max-width: 500px; 
        margin: 0 auto; 
    }

    .form-title {
        color: #333;
    }

    .form-group label {
        font-weight: bold;
    }

    .btn-primary {
        background-color: #007BFF;
        border: none;
    }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
    }

    .btn-block {
        width: 100%;
    }
</style>

<div class="container mt-5">
    <h1 class="text-center form-title">@ViewData["Title"]</h1>

    <h4 class="mt-4">Position</h4>
    <hr />
    <div class="row justify-content-center">
        <div class="form-background">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <div class="form-group mb-3">
                    <label asp-for="PosNo" class="control-label"></label>
                    <input asp-for="PosNo" class="form-control" />
                    <span asp-validation-for="PosNo" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="MinSalary" class="control-label"></label>
                    <input asp-for="MinSalary" class="form-control" />
                    <span asp-validation-for="MinSalary" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="MaxSalary" class="control-label"></label>
                    <input asp-for="MaxSalary" class="form-control" />
                    <span asp-validation-for="MaxSalary" class="text-danger"></span>
                </div>
                <div class="form-group mt-4">
                    <input type="submit" value="Create" class="btn btn-primary btn-block" />
                </div>
            </form>
            <div class="mt-3">
                <a asp-action="Index" class="btn btn-secondary btn-block">Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
